# ============================================================
# Tシャツデザインジェネレーター 環境変数設定
# ============================================================
# このファイルを .env にコピーして、各APIキーを設定してください
# コマンド: cp .env.example .env
# ============================================================

# ------------------------------------------------------------
# Gemini API Key (必須)
# ------------------------------------------------------------
# 用途:
#   - デザインアイディアの生成
#   - SNS投稿文の生成
#   - 画像生成（FAL AIの代替として）
# 取得先: https://aistudio.google.com/apikey
# 料金: 無料枠あり
GEMINI_API_KEY=your_gemini_api_key_here

# ------------------------------------------------------------
# FAL AI API Key (推奨)
# ------------------------------------------------------------
# 用途:
#   - メイン画像生成エンジン（高品質）
#   - Geminiより高速で安定
# 取得先: https://fal.ai/dashboard/keys
# 料金: 従量課金（1画像あたり約$0.05）
# 注意: 未設定の場合はGeminiで画像生成を行います
FAL_API_KEY=your_fal_api_key_here

# ------------------------------------------------------------
# Printify API Key (オプション)
# ------------------------------------------------------------
# 用途:
#   - Printifyへの自動商品登録
#   - 画像アップロード
# 取得先: https://printify.com/app/account/api
# 注意: Printifyアカウントが必要です
PRINTIFY_API_KEY=your_printify_api_key_here

# ------------------------------------------------------------
# remove.bg API Key (オプション)
# ------------------------------------------------------------
# 用途:
#   - 高精度な背景除去（99%以上の精度）
#   - 画像生成後の自動背景除去
# 取得先: https://www.remove.bg/api
# 料金: 月50枚無料、以降$0.20/枚
# 注意: 未設定の場合は簡易背景除去を使用（四隅連結方式、無料）
#       - 四隅から連結した白背景のみ削除
#       - キャラクターの白い部分（猫、髪など）は保護
#       - 精度70-80%（remove.bg: 99%）
REMOVEBG_API_KEY=your_removebg_api_key_here

# ------------------------------------------------------------
# Supabase (必須 - 重複防止のため)
# ------------------------------------------------------------
# 用途:
#   - アイデア履歴の保存
#   - 重複したキャラクター・フレーズの防止
# 取得先: https://supabase.com/dashboard
# 料金: 無料枠あり（500MB Database）
# セットアップ:
#   1. Supabaseプロジェクトを作成
#   2. 以下のSQLを実行してテーブルを作成:
#
#   CREATE TABLE design_ideas (
#     id UUID DEFAULT gen_random_uuid() PRIMARY KEY,
#     created_at TIMESTAMP WITH TIME ZONE DEFAULT NOW(),
#     theme TEXT NOT NULL,
#     character TEXT NOT NULL,
#     phrase TEXT NOT NULL,
#     font_style TEXT NOT NULL,
#     product_type TEXT NOT NULL DEFAULT 'tshirt'
#   );
#
#   CREATE INDEX idx_design_ideas_theme ON design_ideas(theme);
#   CREATE INDEX idx_design_ideas_created_at ON design_ideas(created_at DESC);
#   CREATE INDEX idx_design_ideas_product_type ON design_ideas(product_type);
#
#   *** 既存テーブルがある場合は以下を実行してカラムを追加 ***
#   ALTER TABLE design_ideas ADD COLUMN IF NOT EXISTS product_type TEXT NOT NULL DEFAULT 'tshirt';
#   CREATE INDEX IF NOT EXISTS idx_design_ideas_product_type ON design_ideas(product_type);
#
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ------------------------------------------------------------
# CORS設定 (本番環境で推奨)
# ------------------------------------------------------------
# 用途: セキュリティ強化（特定のオリジンからのみアクセスを許可）
# 形式: カンマ区切りのURL（例: https://example.com,https://app.example.com）
# 開発環境: 未設定の場合、すべてのオリジンを許可します
# 本番環境: 必ず設定してください
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ------------------------------------------------------------
# サーバー設定
# ------------------------------------------------------------
# ポート番号（デフォルト: 3000）
PORT=3000

# ------------------------------------------------------------
# Etsy API (オプション - 承認待ち)
# ------------------------------------------------------------
# 用途:
#   - Etsy商品への直接画像アップロード
#   - Etsyリスティングの更新
# 注意: 現在API承認待ち
ETSY_API_KEY=your_etsy_api_key
ETSY_SHOP_ID=your_etsy_shop_id
ETSY_ACCESS_TOKEN=your_etsy_access_token
ETSY_REFRESH_TOKEN=your_etsy_refresh_token

# ============================================================
# セキュリティに関する注意事項
# ============================================================
# ⚠️  .env ファイルは絶対にGitにコミットしないでください
# ⚠️  APIキーは他人と共有しないでください
# ⚠️  本番環境では環境変数を安全に管理してください
#     （例: Vercel Environment Variables, AWS Secrets Manager等）
# ============================================================